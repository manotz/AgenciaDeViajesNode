extends ./layout/index

block contenido
  main.container.mt-5 
      h1.text-center #{pagina}

      blockquote.text-center Lee sobre nuestros clientes y sus experiencias
      
      include layout/bloque_testimoniales
          

            
      .row
        .col-md-12
         h2.d-block.w-100.text-center Agrega un Testimonial

         if(errores)
          each error in errores  
           .alert.col.alert-danger.text-center= error.mensaje


        .row.justify-content-center.col 
            .col-md-8   
              form(action="/testimoniales" method="POST") 
                .form-group 
                    label(for="nombre") Nombre 
                    input#nombre(type="text",placehoder="Tu Nombre", name="nombre", class="form-control",value=nombre)

                .form-group 
                    label(for="correo") Correo Elect√≥nico 
                    input#correo(type="email",placehoder="Tu Correo", name="correo", class="form-control",value=correo)

                .form-group 
                    label(for="mensaje") Mensaje 
                    textarea#mensaje(name="mensaje",rows="3" ,placehoder="Tu mensaje", class="form-control") #{mensaje} 
                
                input.btn.btn-success.btn-block(type="submit", value="Enviar")
                

